<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="post-heading">Title</label>
    <input type="text" class="form-control" id="post-heading" name="postTitle">
  </div>
  <div class="form-group">
    <label for="postArea">Post</label>
    <textarea  class="form-control" id="postArea" name="postBody" rows="3"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
